<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TelaPrincipalAtualizado.Views.SucessPage"
             Title="Sucesso">
    
    <VerticalStackLayout Padding="20" Spacing="16"
                         VerticalOptions="Center"
                         HorizontalOptions="Center">

        <Image Source="check.png" WidthRequest="120" HeightRequest="120" />

        <Label Text="Locação Confirmada!"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <Button Text="Voltar ao Carrinho"
                Clicked="VoltarClicked"
                BackgroundColor="#28a745"
                TextColor="White"
                CornerRadius="20"
                HeightRequest="50"
                WidthRequest="200"/>
    </VerticalStackLayout>
</ContentPage>