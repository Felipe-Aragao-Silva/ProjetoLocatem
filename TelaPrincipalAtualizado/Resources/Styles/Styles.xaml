<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Cores -->
    <Color x:Key="CorPrimaria">#FFCB03</Color>
    <Color x:Key="CorSecundaria">#F5E3B3</Color>
    <Color x:Key="CorTerciaria">#6E5000</Color>
    <Color x:Key="CorQuartaria">#D9D9D9</Color>
    <Color x:Key="CorBranco">#FFFFFF</Color>
    <Color x:Key="CorPreto">#000000</Color>
    <Color x:Key="CorPadrao">#F2AF0D</Color>
    <Color x:Key="CorErro">#FF0000</Color>
    <Color x:Key="Detalhe">#212121</Color>
    <Color x:Key="CorAmareloPrincipal">#FFCB03</Color>
    <Color x:Key="CorAmareloClaro">#FFCE4F</Color>
    <Color x:Key="CorAmareloDestaque">#F2AF0D</Color>
    <Color x:Key="CorMarrom">#6E5000</Color>
    <Color x:Key="CorBege">#F5E3B3</Color>
    <Color x:Key="CorCinzaClaro">#D9D9D9</Color>
    <Color x:Key="CorCinzaEscuro">#272627</Color>
    <Color x:Key="CorLink">#0000FF</Color>

    <!-- Estilos -->
    <Style TargetType="CheckBox" x:Key="CheckBox">
        <Setter Property="Color" Value="{StaticResource CorQuartaria}" />
    </Style>

    <Style TargetType="Span" x:Key="EstiloLink">
        <Setter Property="TextDecorations" Value="Underline"/>
        <Setter Property="TextColor" Value="#0000FF"/>
    </Style>

    <Style TargetType="ContentPage" x:Key="ContentFundo">
        <Setter Property="BackgroundColor" Value="{StaticResource CorBranco}"/>
    </Style>

    <Style TargetType="HorizontalStackLayout" x:Key="EstiloHorizontalStack">
        <Setter Property="Spacing" Value="24"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="HorizontalOptions" Value="End"/>
    </Style>

    <Style TargetType="Grid" x:Key="EstiloGridBase">
        <Setter Property="ColumnSpacing" Value="0"/>
        <Setter Property="RowSpacing" Value="0"/>
    </Style>

    <Style TargetType="Border" x:Key="EstiloBordaEntry">
        <Setter Property="Stroke" Value="{StaticResource CorPreto}"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 5"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="MinimumHeightRequest" Value="44"/>
        <Setter Property="BackgroundColor" Value="{StaticResource CorBranco}"/>
    </Style>

    <Style TargetType="Entry" x:Key="EstiloEntry">
        <Setter Property="TextColor" Value="{StaticResource CorPreto}"/>
        <Setter Property="PlaceholderColor" Value="{StaticResource CorPreto}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="BackgroundColor" Value="{StaticResource CorBranco}"/>
    </Style>

    <Style TargetType="Button" x:Key="EstiloBotaoBase">
        <Setter Property="HeightRequest" Value="45"/>
        <Setter Property="HorizontalOptions" Value="Fill"/>
        <Setter Property="VerticalOptions" Value="Fill"/>
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="FontAttributes" Value="Bold"/>
    </Style>

    <Style TargetType="Label" x:Key="LabelSaudacao">
        <Setter Property="FontSize" Value="23"/>
        <Setter Property="TextColor" Value="{StaticResource CorPreto}"/>
    </Style>

    <Style TargetType="Label" x:Key="LabelNormal">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontAttributes" Value="None"/>
        <Setter Property="TextColor" Value="{StaticResource CorPreto}"/>
        <Setter Property="VerticalOptions" Value="Start"/>
    </Style>

    <Style TargetType="Button" x:Key="EstiloBotaoPrimario" BasedOn="{StaticResource EstiloBotaoBase}">
        <Setter Property="BackgroundColor" Value="{StaticResource CorPrimaria}"/>
        <Setter Property="TextColor" Value="{StaticResource CorPreto}"/>
        <Setter Property="Margin" Value="0,30,0,0"/>
    </Style>

    <Style TargetType="Button" x:Key="EstiloBotaoSecundario" BasedOn="{StaticResource EstiloBotaoBase}">
        <Setter Property="BackgroundColor" Value="{StaticResource CorSecundaria}"/>
        <Setter Property="TextColor" Value="{StaticResource CorTerciaria}"/>
    </Style>

    <Style TargetType="Label" x:Key="LabelSaudacaoGrande">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="TextColor" Value="{StaticResource CorPreto}"/>
    </Style>

    <Style TargetType="Label" x:Key="LabelPequeno">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="TextColor" Value="{StaticResource CorPreto}"/>
    </Style>

    <Style TargetType="Label" x:Key="LabelTermos">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="TextColor" Value="{StaticResource CorPreto}"/>
        <Setter Property="LineBreakMode" Value="WordWrap"/>
        <Setter Property="VerticalOptions" Value="Center"/>
    </Style>

    <Style TargetType="Label" x:Key="LabelRodape" BasedOn="{StaticResource LabelPequeno}">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="TextColor" Value="{StaticResource CorPrimaria}"/>
    </Style>

    <Style x:Key="TituloLabel" TargetType="Label">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="{StaticResource CorPreto}"/>
        <Setter Property="Margin" Value="0,0,0,15"/>
    </Style>

    <Style x:Key="ButtonsSideBar" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="TextColor" Value="{StaticResource CorPreto}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="BorderWidth" Value="0"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="HorizontalOptions" Value="Start"/>
        <Setter Property="HeightRequest" Value="40"/>
        <Setter Property="Margin" Value="0,4"/>
        <Setter Property="FontAttributes" Value="Bold"/>
    </Style>

    <!-- Botões e imagens adicionais -->
    <Style TargetType="ImageButton" x:Key="BotaoOlho">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="WidthRequest" Value="25"/>
        <Setter Property="HeightRequest" Value="25"/>
        <Setter Property="Margin" Value="0,0,10,0"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="HorizontalOptions" Value="End"/>
        <Setter Property="BorderWidth" Value="0"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

    <Style TargetType="ImageButton" x:Key="BotaoSeta">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="WidthRequest" Value="60"/>
        <Setter Property="Margin" Value="0,-10,-5,0"/>
        <Setter Property="HorizontalOptions" Value="Start"/>
        <Setter Property="BorderWidth" Value="0"/>
    </Style>

    <Style TargetType="Button" x:Key="BotaoTrocaAmarelo">
        <Setter Property="BackgroundColor" Value="{StaticResource CorAmareloDestaque}"/>
        <Setter Property="TextColor" Value="{StaticResource CorPreto}"/>
        <Setter Property="BorderWidth" Value="0"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="WidthRequest" Value="150"/>
        <Setter Property="HeightRequest" Value="50"/>
        <Setter Property="VerticalOptions" Value="Start"/>
        <Setter Property="HorizontalOptions" Value="End"/>
    </Style>

    <Style TargetType="Button" x:Key="BotaoTrocaPreto">
        <Setter Property="BackgroundColor" Value="{StaticResource CorPreto}"/>
        <Setter Property="TextColor" Value="{StaticResource CorAmareloDestaque}"/>
        <Setter Property="BorderWidth" Value="0"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="WidthRequest" Value="150"/>
        <Setter Property="HeightRequest" Value="50"/>
        <Setter Property="VerticalOptions" Value="Start"/>
        <Setter Property="HorizontalOptions" Value="Start"/>
    </Style>

    <!-- Estilo padrão dos botões do painel lateral -->
    <Style x:Key="BotaoLateral" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="Black" />
        <Setter Property="BorderColor" Value="{StaticResource PainelLateralEscuro}" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="HeightRequest" Value="40" />
        <Setter Property="WidthRequest" Value="240" />
        <Setter Property="HorizontalOptions" Value="Center" />
    </Style>

    <!-- Estilo do botão ativo (página atual: Notificações) -->
    <Style x:Key="BotaoLateralAtivo" TargetType="Button" BasedOn="{StaticResource BotaoLateral}">
        <Setter Property="BackgroundColor" Value="{StaticResource PainelLateralEscuro}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="BorderWidth" Value="0" />
    </Style>

</ResourceDictionary>
